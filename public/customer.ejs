                <button id="addButton">Add Customer</button>
                <div id="add-customer-tab" style="display: none;">
               

                  
            
                <!--    new customer forms         -->
                <h2>Add a new customer</h2>
                <form id="add-customer-form">
                <label for="id">ID:</label><br>
                <input type="text" id="id" name="id"><br>  
                <label for="name">Name:</label><br>
                <input type="text" id="name" name="name"><br>
                <label for="email">Email:</label><br>
                <input type="text" id="email" name="email"><br>
                <label for="address">Address:</label><br>
                <input type="text" id="address" name="address"><br>
                <button id="submitButton" type="submit">Add Customer</button>

                
            </form>
            </div>

            <!-- Edit customer button   -->
            <button id="edit-customer-button">Edit Customer</button>
            <div id="edit-customer-tab" style="display: none;">
                <form id="edit-customer-form">
                    <label for="edit-id">ID:</label><br>
                    <input type="text" id="edit-id" name="edit-id"><br>
                    <label for="edit-name">Name:</label><br>
                    <input type="text" id="edit-name" name="edit-name"><br>
                    <label for="edit-email">Email:</label><br>
                    <input type="text" id="edit-email" name="edit-email"><br>
                    <label for="edit-address">Address:</label><br>
                    <input type="text" id="edit-address" name="edit-address"><br>
                    <button id="submitButton" type="submit">Edit Customer</button>
              


                </form>

            </div>


            <!--Delete customer button-->
            <button id="delete-customer-button">Delete Customer</button>
            <div id="delete-customer-tab" style="display: none;">
                <form id="delete-customer-form">
                    <label for="delete-id">ID:</label><br>
                    <input type="text" id="delete-id" name="delete-id"><br>

                    <button id="submitButton" type="submit">Delete Customer</button>


                </form>


